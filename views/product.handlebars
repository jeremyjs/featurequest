<!-- Page Content -->
<div id="{{id}}" class="container quest-list">
  <div class="header-box">
    <h1>{{name}}</h1>
    <p>{{desc}}</p>
    <form id="quest-input" role="form" class="form-inline new-request-form">
      <div class="form-group">
        <input placeholder="Type a new request..." type="text" class="form-control new-request-input" id="comment" autofocus>
      </div>
      <div class="form-group">
        <select name="type" id="type" class="request-type-select">
          <option value="feature">Feature</option>
          <option value="bug">Bug</option>
        </select>
      </div>
      <!-- <div class="form-group">
        <select name="type" id="type" class="request-type-select">
          <option value="feature">Feature</option>
          <option value="bug">Bug</option>
        </select>
      </div> -->
    </form>
  </div>
  <hr>
  <ul class="quests">
    <li class="quest">
      <span class="leader">
        <div class="btn-vote btn-upvote" data-field="upvotes"><i class="fa fa-chevron-up"></i></div>
        <div class="quest-score"> ~ </div>
        <div class="btn-vote btn-downvote" data-field="downvotes"><i class="fa fa-chevron-down"></i></div>
      </span>
      <div class="title-outer">
        <div class="title">
          Loading issues...
        </div>
      </div>
    </li>
  </ul>
</div>
